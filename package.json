{
  "name": "fair-swap",
  "version": "0.1.0",
  "type": "module",
  "license": "ISC",
  "scripts": {
    "dev": "concurrently -n \"BACKEND,WEB\" -c \"blue,magenta\" \"pnpm dev:backend\" \"pnpm dev:web\"",
    "dev:backend": "tsx watch backend-src/index.ts",
    "dev:backend:stable": "tsx backend-src/index.ts",
    "dev:web": "next dev",
    "build": "pnpm build:backend && pnpm build:web",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:web": "next build",
    "start": "concurrently -n \"BACKEND,WEB\" -c \"blue,magenta\" \"pnpm start:backend\" \"pnpm start:web\"",
    "start:backend": "node dist/index.js",
    "start:web": "next start",
    "db:setup": "tsx backend-src/database/setup-supabase.ts",
    "db:test": "tsx backend-src/database/test-connection.ts",
    "db:cleanup": "pnpm build:backend && node dist/database/cleanup-completed.js",
    "db:cleanup-all": "pnpm build:backend && node dist/database/cleanup-all-offers.js",
    "check": "./CHECK_SETUP.sh",
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check && eslint",
    "ts-mocha": "ts-mocha"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@fastify/cookie": "^11.0.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-adapter-phantom": "^0.9.28",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/wallet-adapter-solflare": "^0.6.32",
    "@solana/wallet-adapter-wallets": "^0.19.37",
    "@solana/web3.js": "^1.98.4",
    "@supabase/supabase-js": "^2.87.1",
    "@tanstack/react-query": "^5.90.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/three": "^0.182.0",
    "axios": "^1.13.2",
    "bs58": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.3",
    "framer-motion": "^12.23.26",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.559.0",
    "nanoid": "^5.1.6",
    "next": "16.0.8",
    "pino-pretty": "^13.1.3",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "three": "^0.182.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@solana/spl-token": "^0.4.14",
    "@tailwindcss/postcss": "^4",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chai": "^4.3.4",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.8",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "ts-mocha": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
